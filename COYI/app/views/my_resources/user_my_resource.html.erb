<h1> <%= current_user.first_name%>'s Resources</h1>

<%= link_to 'New Resource', new_my_resource_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_resources.each do |my_resource| %>
      <tr>
        <td><%= link_to my_resource.title%></td>
        <td><%= link_to my_resource.id%></td>
        <td><%= link_to my_resource.description %></td>
        <td><%= my_resource.status %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
