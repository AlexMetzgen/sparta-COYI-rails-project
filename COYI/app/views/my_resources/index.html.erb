<h1>My Resources</h1>
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_resources.each do |my_resource| %>
      <tr>
        <td><%= my_resource.title %></td>
        <td><%= my_resource.description %></td>
        <td><%= link_to 'Show', my_resource %></td>
        <td><%= link_to 'Edit', edit_my_resource_path(my_resource) %></td>
        <td><%= link_to 'Destroy', my_resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resource', new_my_resource_path %>
