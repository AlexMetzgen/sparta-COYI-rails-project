<!DOCTYPE html>
<html>
  <head>
    <title>COYI</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- gives the page a favicon icon on the page tab -->
    <link rel="shortcut icon" href="/images/favicon.ico">
    <meta name="viewport" content="width=device-width">

    <!-- our custom styles come after Bootstrap -->
    <link rel="stylesheet" href="/Stylesheets/master.css">

  </head>
  <body class="title">
    <% url = request.path_info%>
    <% if url == '/' %>
      <%= yield %>
    <%else%>
      <!-- renders the navbar on every page unless we say otherwise -->
      <%= render 'layouts/navbar' %>
      <div class="top-of-page"></div>
      <%= yield %>
      <!-- renders the footer on every page unless we say otherwise -->
      <%= render 'layouts/footer' %>
      <link rel="stylesheet" href="/Stylesheets/layouts.css">
    <%end%>
  </body>
</html>
