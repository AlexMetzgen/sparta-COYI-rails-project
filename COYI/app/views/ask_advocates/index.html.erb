<p id="notice"><%= notice %></p>

<h1>Ask An Expert</h1>

<div class="row">
  <div class="col-md-3">

  </div>
  <div class="col-md-6 white-text text-on-bk-red pad">
    <%= link_to 'Ask', new_ask_advocate_path, :class => 'btn btn-outline-light btn-lg btn-block', :style => "width: 25%; float: right;" %>
    <br>
    <table>
      <thead>
        <tr>
          <th>Topic:</th>
          <th>Details:</th>
          <th>To</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @ask_advocates.each do |ask_advocate| %>
          <tr>
            <td><%= ask_advocate.title %></td>
            <td><%= ask_advocate.body %></td>
            <td><%= User.find(ask_advocate.email_to).first_name%> <%= User.find(ask_advocate.email_to).second_name %></td>
            <td><%= link_to 'Show', ask_advocate %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3">

  </div>
</div>
